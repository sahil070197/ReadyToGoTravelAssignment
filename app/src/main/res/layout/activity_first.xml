<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sahil.readytogotravelassignment.FirstActivity">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/onBoardPager"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dot_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dot_margin_bottom"
        android:gravity="center"
        android:id="@+id/dots"
        android:orientation="horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".5"
        android:id="@+id/border"
        android:layout_above="@id/dots"
        android:background="@android:color/white"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/dots"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/sampleButton" />
</RelativeLayout>
